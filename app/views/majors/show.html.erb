<h4><%= link_to 'Back to All Majors', majors_path %></h4>
<h3><%= @major.major_code %> <%= @major.major_name %></h1>
</br>
<% if @major.users.any? %>
  <h4> Users (<%= @major.users.count %>) </h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Class</th>
      </tr>
    </thead>

    <tbody>
      <% @major.users.each do |user| %>
        <tr>
          <td><%= link_to user.full_name, user_path(user.id) %></td>
          <td><%= user.email %></td>
          <td><%= user.student_id_number.div(10000) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%end%>

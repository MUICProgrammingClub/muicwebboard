<!DOCTYPE html>
<html>
<head>
  <title>Muicwebboard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-static-top">

<div class= "container">
	<a class="navbar-brand" href=<%= root_path %>> IC NETWORK </a> 
	<div id="navbar" class="navbar-collapse collapse">
		<ul class="nav navbar-nav" >
			<li> <a href="#"><span class="glyphicon glyphicon-menu-hamburger"></span></a> </li>
		</ul>
		<ul class="nav navbar-nav navbar-right">
		<% if user_signed_in? %> 
			<li class="dropdown">
              	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><strong>Log in as: </strong>
              	<%= current_user.first_name %> 
              <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Edit User Profile", edit_user_registration_path %></li>
                <li><%= link_to "Your Profile", user_path(current_user.id) %></li>
              </ul>
            </li>
		<% else %>
			<li> <a href=<%= user_session_path %>> Sign In </a> </li>
		<% end %> 
		</ul>
	</div>
</div>
</nav>


<div class="container">
<%= yield %>
</div>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>

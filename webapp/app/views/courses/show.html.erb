<h4><%= link_to 'Back to All Courses', courses_path %></h4>
<h3><%= @course.course_code %> <%= @course.course_name %></h1>
</br>
<% if @course.lectures.any? %>
  <!-- count the total number of real approve lectures -->
  <% real_lecture = 0 %>
  <% @course.lectures.each do |lecture| %>
      <% if lecture.approve == true %>
        <% real_lecture+=1 %>
      <% end %>
  <% end %>
  <h4> Lectures (<%= real_lecture %>) </h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th> Thumbnail </th>
        <th>Share by</th>
        <th >Instructor</th>
        <th >Term</th>
        <th >Lecture name</th>
        <th >Chapter</th>
        <th > Average rating </th>
      </tr>
    </thead>
    <%= render 'courselecture' %>

  </table>
<%end%>
